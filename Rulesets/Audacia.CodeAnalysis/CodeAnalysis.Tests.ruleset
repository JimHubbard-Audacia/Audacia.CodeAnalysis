<?xml version="1.0" encoding="utf-8"?>
<RuleSet Name="Unit Test Rules" ToolsVersion="15.0">
	<Include Path="CodeAnalysis.ruleset" Action="Default" />

	<Rules AnalyzerId="Roslynator.CSharp.Analyzers" RuleNamespace="Roslynator.CSharp.Analyzers">
		<Rule Id="RCS1046" Action="None"/><!-- [NAMING] Asynchronous method name should end with 'Async' -->
	</Rules>

	<Rules AnalyzerId="Microsoft.CodeQuality.Analyzers" RuleNamespace="Microsoft.CodeQuality.Analyzers">
		<Rule Id="CA1034" Action="None" /><!-- [NAMING] Nested types should not be visible -->
		<Rule Id="CA1062" Action="None" /><!-- [DESIGN] Validate arguments of public methods -->
		<Rule Id="CA1707" Action="None" /><!-- [DESIGN] Identifiers should not contain underscores -->
		<Rule Id="CA2007" Action="None" /><!-- [RELIABILITY] Consider calling ConfigureAwait on the awaited task -->
	</Rules>

</RuleSet>